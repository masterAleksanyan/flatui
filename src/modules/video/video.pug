mixin video()
  .video-container
    video(class="video" poster="assets/img/video.png")
      source(src="assets/video/videoplayback.webm" type="video/webm")
      source(src="assets/video/videoplayback.mp4" type="video/mp4")
      source(src="assets/video/videoplayback.ogv" type="video/ogg")
      p Your browser doesn't support HTML5 video.
    #video-controls.controls
      button(type="button" class="controls__pp") &rtrif;
      .controls__range
        .controls__lavel
        input(type="range" value="0" class="controls__seekbar")
      button(type="button" class="controls__fullscreen")
        i.icon-fullpage