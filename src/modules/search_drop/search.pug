mixin dropDown(options, myClass)
  .drop(class=(myClass ? myClass : false))
    input(class="drop__inp" id=""+options.id type="checkbox" 
          placeholder=""+(options.placeholder ? options.placeholder : 'Choose An Option'))
    label(class="drop__label" for=""+options.id)
      span.drop__btn(class=" drop__btn--"+options.color)
    .drop-list(class=" drop-list--"+options.color)
      - for (var i=0; i<options.array.length; i++)
        input(class="drop-list__inp" id=""+options.id+i 
              type="radio" name="r_"+options.id
              checked=(i == 0 ? 'checked' : false))
        label(class="drop-list__item" for=""+options.id+i )= options.array[i]


