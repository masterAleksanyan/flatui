mixin search(options, myClass)
  p.searching(class=(myClass ? myClass : false))
    input(class="searching__input "+ (options.error ? "searching__input--"+options.error : "")
          type="search" 
          placeholder=""+options.placeholder)
    button(class="searching__btn searching__btn--"+options.color type="button")
      i.icon-search


